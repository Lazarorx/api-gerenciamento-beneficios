{
  "watch": ["src/"],
  "ext": "js,json",
  "ignore": [
    "tests/",
    "node_modules/",
    "coverage/",
    "*.test.js",
    "*.spec.js",
    ".git/",
    "README.md",
    "package*.json"
  ],
  "exec": "node src/infrastructure/web/server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": false,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false,
  "signal": "SIGTERM",
